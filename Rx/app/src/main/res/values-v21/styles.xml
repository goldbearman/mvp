<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="YellowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryDark">@color/yellow_primary_dark</item>
        <item name="colorAccent">@color/yellow_accent</item>
        <item name="android:navigationBarColor">@color/yellow_primary_dark</item>

        <item name="editTextStyle">@style/style_et</item>
        <item name="buttonStyle">@style/style_button</item>

    </style>

    <style name="style_et" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="style_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/all_button</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>


    <style name="OrangeTheme" parent="YellowTheme" >
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:navigationBarColor">@color/orange_primary_dark</item>


    </style>

    <style name="RedTheme" parent="YellowTheme" >
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_primary_dark</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:navigationBarColor">@color/red_primary_dark</item>
    </style>

    <style name="GreenTheme" parent="YellowTheme" >
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:navigationBarColor">@color/green_primary_dark</item>
    </style>

    <style name="DarkBlueTheme" parent="YellowTheme" >
        <item name="colorPrimary">@color/dark_blue_primary</item>
        <item name="colorPrimaryDark">@color/dark_blue_primary_dark</item>
        <item name="colorAccent">@color/dark_blue_accent</item>
        <item name="android:navigationBarColor">@color/dark_blue_primary_dark</item>
    </style>



</resources>